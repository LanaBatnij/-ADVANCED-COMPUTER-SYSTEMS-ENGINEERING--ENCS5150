<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activities.Admin.AddSpecialOffersActivity">

    <EditText
        android:id="@+id/editTextPizzaTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pizza Types (comma separated)"/>

    <EditText
        android:id="@+id/editTextSizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sizes (comma separated)"/>

    <EditText
        android:id="@+id/editTextOfferPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Offer Period"/>

    <EditText
        android:id="@+id/editTextTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Price"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/buttonAddOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E86238"
        android:text="Add Offer"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:icon="@drawable/baseline_add_24" />
</LinearLayout>
