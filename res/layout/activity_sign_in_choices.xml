<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.SignInChoices">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/p" />

    <Button
        android:id="@+id/SignAsAdmin"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F4511E"
        android:text="Sign As Admin"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/SignAsCustomer"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F4511E"
        android:text="Sign As Customer"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>
