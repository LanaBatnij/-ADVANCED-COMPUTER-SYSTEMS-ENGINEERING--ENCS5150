<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/p_background"
    android:gravity="center"
    tools:context=".Activities.HomeAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:text="Admin Profile"
            android:textColor="#000000"
            android:textSize="35dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textSize="24dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="Last Name"
            android:inputType="textPersonName"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="Email"
            android:enabled="false"/>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="Phone Number"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="Password"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="Confirm Password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/updateProfileButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E86238"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:text="Update Profile"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/addAdminButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E86238"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:text="Add Admin"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/viewAllOrdersButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E86238"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:text="View All Orders"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/addSpecialOffersButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E86238"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:text="Add Special Offers"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#E86238"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:text="Logout"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
